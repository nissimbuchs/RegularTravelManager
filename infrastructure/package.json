{
  "name": "@rtm/infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "AWS CDK Infrastructure as Code",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",

    "build:frontend": "npm run build --workspace=../apps/web",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "SKIP_INTEGRATION=false jest test/infrastructure-integration.test.ts",
    "test:all": "jest && npm run test:integration",

    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --context environment=dev --require-approval never",
    "deploy:staging": "cdk deploy --all --context environment=staging --require-approval never",
    "deploy:production": "cdk deploy --all --context environment=production --require-approval never",
    "deploy:stack:infrastructure:dev": "cdk deploy rtm-dev-infrastructure --context environment=dev --require-approval never",
    "deploy:stack:lambda:dev": "cdk deploy rtm-dev-lambda --context environment=dev --require-approval never",
    "deploy:stack:api:dev": "cdk deploy rtm-dev-api-gateway --context environment=dev --require-approval never",
    "deploy:stack:certificate:dev": "cdk deploy rtm-dev-certificate --context environment=dev --require-approval never",
    "deploy:stack:web:dev": "cdk deploy rtm-dev-web --context environment=dev --require-approval never",

    "deploy:stack:infrastructure:staging": "cdk deploy rtm-staging-infrastructure --context environment=staging --require-approval never",
    "deploy:stack:lambda:staging": "cdk deploy rtm-staging-lambda --context environment=staging --require-approval never",
    "deploy:stack:api:staging": "cdk deploy rtm-staging-api-gateway --context environment=staging --require-approval never",
    "deploy:stack:certificate:staging": "cdk deploy rtm-staging-certificate --context environment=staging --require-approval never",
    "deploy:stack:web:staging": "cdk deploy rtm-staging-web --context environment=staging --require-approval never",

    "deploy:stack:infrastructure:production": "cdk deploy rtm-production-infrastructure --context environment=production --require-approval never",
    "deploy:stack:lambda:production": "cdk deploy rtm-production-lambda --context environment=production --require-approval never",
    "deploy:stack:api:production": "cdk deploy rtm-production-api-gateway --context environment=production --require-approval never",
    "deploy:stack:certificate:production": "cdk deploy rtm-production-certificate --context environment=production --require-approval never",
    "deploy:stack:web:production": "cdk deploy rtm-production-web --context environment=production --require-approval never",
    "deploy:web:dev": "npm run build:frontend && npm run deploy:stack:certificate:dev && npm run deploy:stack:web:dev",
    "deploy:web:staging": "npm run build:frontend && npm run deploy:stack:certificate:staging && npm run deploy:stack:web:staging",
    "deploy:web:production": "npm run build:frontend && npm run deploy:stack:certificate:production && npm run deploy:stack:web:production",
    "destroy:dev": "cdk destroy --all --context environment=dev --force",
    "destroy:staging": "cdk destroy --all --context environment=staging --force",
    "destroy:production": "cdk destroy --all --context environment=production --force",
    "synth:dev": "cdk synth --all --context environment=dev",
    "synth:staging": "cdk synth --all --context environment=staging",
    "synth:production": "cdk synth --all --context environment=production",

    "bootstrap:dev": "cdk bootstrap --context environment=dev",
    "bootstrap:staging": "cdk bootstrap --context environment=staging",
    "bootstrap:production": "cdk bootstrap --context environment=production",
    "bootstrap:us-east-1": "cdk bootstrap aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/us-east-1",
    "bootstrap:all-regions": "cdk bootstrap aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/eu-central-1 aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/us-east-1",

    "diff:dev": "cdk diff --context environment=dev",
    "diff:staging": "cdk diff --context environment=staging",
    "diff:production": "cdk diff --context environment=production",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.100.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.100.0-alpha.0",
    "aws-cdk-lib": "^2.100.0",
    "bootstrap": "^5.3.8",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@aws-sdk/client-api-gateway": "^3.879.0",
    "@aws-sdk/client-cloudformation": "^3.879.0",
    "@aws-sdk/client-cloudwatch": "^3.879.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.879.0",
    "@aws-sdk/client-location": "^3.879.0",
    "@aws-sdk/client-rds": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-secrets-manager": "^3.879.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-ssm": "^3.879.0",
    "@types/node": "^18.18.0",
    "@types/pg": "^8.11.0",
    "aws-cdk": "^2.100.0",
    "node-fetch": "^3.3.0",
    "pg": "^8.11.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"
  }
}
