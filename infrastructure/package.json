{
  "name": "@rtm/infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "AWS CDK Infrastructure as Code",
  "scripts": {
    "build": "tsc",
    "build:frontend:dev": "npm run build:dev --workspace=../apps/web",
    "build:frontend:staging": "npm run build:staging --workspace=../apps/web", 
    "build:frontend:production": "npm run build:prod --workspace=../apps/web",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "SKIP_INTEGRATION=false jest test/infrastructure-integration.test.ts",
    "test:all": "jest && npm run test:integration",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all --context environment=dev --require-approval never",
    "deploy:staging": "cdk deploy --all --context environment=staging",
    "deploy:production": "cdk deploy --all --context environment=production",
    "deploy:infrastructure": "cdk deploy rtm-*-infrastructure --require-approval never",
    "deploy:lambda": "cdk deploy rtm-*-lambda --require-approval never", 
    "deploy:api": "cdk deploy rtm-*-api-gateway --require-approval never",
    "deploy:web": "cdk deploy rtm-*-web --require-approval never",
    "deploy:infrastructure:dev": "cdk deploy rtm-dev-infrastructure --context environment=dev --require-approval never",
    "deploy:lambda:dev": "cdk deploy rtm-dev-lambda --context environment=dev --require-approval never",
    "deploy:api:dev": "cdk deploy rtm-dev-api-gateway --context environment=dev --require-approval never",
    "deploy:web:dev": "cdk deploy rtm-dev-web --context environment=dev --require-approval never",
    "deploy:web:staging": "cdk deploy rtm-staging-web --context environment=staging --require-approval never",
    "deploy:certificate:dev": "cdk deploy rtm-dev-certificate --context environment=dev --require-approval never",
    "deploy:certificate:staging": "cdk deploy rtm-staging-certificate --context environment=staging --require-approval never",
    "deploy:certificate:production": "cdk deploy rtm-production-certificate --context environment=production --require-approval never",
    "deploy:web:production": "cdk deploy rtm-production-web --context environment=production --require-approval never",
    "deploy:frontend:dev": "npm run build:frontend:dev && npm run deploy:certificate:dev && npm run deploy:web:dev",
    "deploy:frontend:staging": "npm run build:frontend:staging && npm run deploy:certificate:staging && npm run deploy:web:staging",
    "deploy:frontend:production": "npm run build:frontend:production && npm run deploy:certificate:production && npm run deploy:web:production",
    "destroy": "cdk destroy --all",
    "destroy:dev": "cdk destroy --all --context environment=dev",
    "destroy:staging": "cdk destroy --all --context environment=staging", 
    "destroy:production": "cdk destroy --all --context environment=production",
    "synth": "cdk synth --all",
    "synth:dev": "cdk synth --all --context environment=dev",
    "synth:staging": "cdk synth --all --context environment=staging",
    "synth:production": "cdk synth --all --context environment=production",
    "bootstrap": "cdk bootstrap",
    "bootstrap:us-east-1": "cdk bootstrap aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/us-east-1",
    "bootstrap:all-regions": "cdk bootstrap aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/eu-central-1 aws://${CDK_DEFAULT_ACCOUNT:-$(aws sts get-caller-identity --query Account --output text)}/us-east-1",
    "diff": "cdk diff",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.100.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.100.0-alpha.0",
    "aws-cdk-lib": "^2.100.0",
    "bootstrap": "^5.3.8",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@aws-sdk/client-api-gateway": "^3.879.0",
    "@aws-sdk/client-cloudformation": "^3.879.0",
    "@aws-sdk/client-cloudwatch": "^3.879.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.879.0",
    "@aws-sdk/client-location": "^3.879.0",
    "@aws-sdk/client-rds": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-secrets-manager": "^3.879.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-ssm": "^3.879.0",
    "@types/node": "^18.18.0",
    "@types/pg": "^8.11.0",
    "aws-cdk": "^2.100.0",
    "node-fetch": "^3.3.0",
    "pg": "^8.11.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"
  }
}
