{
  "name": "web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "predev": "cp src/assets/config/config.local.json src/assets/config/config.json",
    "dev": "ng serve --host 0.0.0.0 --port 4200",
    "prestart": "cp src/assets/config/config.local.json src/assets/config/config.json",
    "start": "ng serve",
    "build": "ng build --configuration dev",
    "build:dev": "ng build --configuration dev",
    "build:staging": "ng build --configuration staging",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx --config ../../.eslintrc.js",
    "lint:fix": "eslint src --ext .ts,.js,.tsx,.jsx --config ../../.eslintrc.js --fix",
    "deploy": "./scripts/deploy.sh",
    "deploy:setup:dev": "aws s3 mb s3://rtm-frontend-dev --region eu-central-1 && aws s3 website s3://rtm-frontend-dev --index-document index.html --error-document index.html --region eu-central-1",
    "deploy:setup:staging": "aws s3 mb s3://rtm-frontend-staging --region eu-central-1 && aws s3 website s3://rtm-frontend-staging --index-document index.html --error-document index.html --region eu-central-1",
    "deploy:setup:production": "aws s3 mb s3://rtm-frontend-production --region eu-central-1 && aws s3 website s3://rtm-frontend-production --index-document index.html --error-document index.html --region eu-central-1",
    "deploy:setup": "echo 'Please specify environment: npm run deploy:setup:dev, deploy:setup:staging, or deploy:setup:production'",
    "cloudfront:setup": "./scripts/setup-cloudfront.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@aws-amplify/auth": "^6.15.0",
    "@aws-amplify/core": "^6.13.1",
    "@rtm/shared": "file:../../packages/shared",
    "aws-amplify": "^6.15.5",
    "rxjs": "~7.8.0",
    "tailwindcss": "^3.3.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "^17.3.17",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2"
  }
}
