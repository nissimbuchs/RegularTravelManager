# HTTP Cache headers for translation files
# Cache translation JSON files for 1 hour

<Files "*.json">
    Header set Cache-Control "public, max-age=3600"
    Header set Content-Type "application/json; charset=utf-8"

    # Enable compression for better performance
    <IfModule mod_deflate.c>
        SetOutputFilter DEFLATE
    </IfModule>

    # Set proper CORS headers for CDN compatibility
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</Files>

# ETag support for better caching
FileETag MTime Size

# Gzip compression for JSON files
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_item_include file \.json$
</IfModule>