{
  "name": "regular-travel-manager",
  "version": "1.0.0",
  "private": true,
  "description": "RegularTravelManager - Employee travel allowance management system",
  "workspaces": [
    "apps/*",
    "domains/*",
    "packages/*",
    "infrastructure"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm-run-all build:packages build:domains build:apps build:infrastructure",
    "deploy": "npm run build && npm run deploy --workspace=infrastructure",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,md}\"",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules/.cache",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build:domains": "npm run build --workspace=domains/travel-allowance --workspace=domains/employee-management --workspace=domains/project-management",
    "build:packages": "npm run build --workspace=packages/shared",
    "build:apps": "npm run build --workspace=apps/api --workspace=apps/web",
    "build:infrastructure": "npm run build --workspace=infrastructure",
    "dev:env": "docker compose up -d",
    "dev:env:logs": "docker compose logs -f",
    "dev:env:clean": "docker compose down -v --remove-orphans",
    "dev:env:restart": "npm run dev:env:clean && npm run dev:env",
    "dev:full": "npm run dev:env && npm-run-all --parallel dev:api dev:web",
    "dev:api:local": "cd apps/api && NODE_ENV=development npm run dev",
    "test:integration": "npm run test:integration --workspace=apps/api",
    "test:e2e:local": "npm run test:e2e --workspace=apps/web",
    "sam:local": "cd apps/api && sam local start-api --template template.local.yaml --docker-network regular-travel-manager_rtm-network",
    "localstack:init": "chmod +x localstack/init/*.sh && for script in localstack/init/*.sh; do echo \"Running $script...\"; $script; done",
    "localstack:status": "curl -s http://localhost:4566/_localstack/health | jq .",
    "localstack:pro": "./scripts/setup-localstack-mode.sh pro",
    "localstack:community": "./scripts/setup-localstack-mode.sh community",
    "logs:localstack": "docker logs -f rtm-localstack",
    "logs:postgres": "docker logs -f rtm-postgres",
    "logs:redis": "docker logs -f rtm-redis",
    "debug:api": "cd apps/api && npm run debug"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "travel-management",
    "employee-allowance",
    "angular",
    "nodejs",
    "aws-cdk",
    "typescript"
  ],
  "author": "Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "ESlint": "npm:eslint@^8.57.1"
  }
}
