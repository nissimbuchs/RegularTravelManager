{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "paths": {
      "@rtm/shared": ["./packages/shared/src"],
      "@rtm/travel-allowance": ["./domains/travel-allowance/src"],
      "@rtm/employee-management": ["./domains/employee-management/src"],
      "@rtm/project-management": ["./domains/project-management/src"],
      "@rtm/calculation-engine": ["./domains/calculation-engine/src"]
    },
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./domains/travel-allowance" },
    { "path": "./domains/employee-management" },
    { "path": "./domains/project-management" },
    { "path": "./domains/calculation-engine" },
    { "path": "./apps/api" },
    { "path": "./apps/web" },
    { "path": "./infrastructure" }
  ]
}